<article class="post">
  <div class="title">
    <h2>{{post.title}}</h2>
  </div>
  <div class="content">{{post.post_text}}</div>
  <div class="meta">
    by
    {{post.user.username}}
    on
    {{post.created_at}}
    |

  </div>
</article>
<div class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="text">
        {{comment_text}}
      </div>
      <div class="meta">
        by
        {{user.username}}
        on
        {{created_at}}
      </div>

    </section>
  {{/each}}
</div>
{{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>

    </div>
  </form>
{{/if}}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}